{
  "include": ["src"],
  "exclude": ["**/__tests__/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022"
  }
}
